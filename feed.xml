{% include base_path %}

<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title type="text" xml:lang="en">Blog 1</title>
  <link type="application/atom+xml" href="http://www.example.com/blog1/atom.xml" rel="self"/>
  <link type="text" href="{{ site.url }}" rel="alternate"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>{{ site.url }}</id>
  <author>
    <name>{{ site.author }}</name>
  </author>
  <rights>Copyright (c) 2016 {{ site.title }}</rights>
  {% for post in site.categories.blog limit:20 %}
    <entry>
      <title>{{ post.title }}</title>
      <link href="{{ bas_path }}{{ post.url }}"/>
      <updated>{{ post.date | date_to_xmlschema }}</updated>
      <id>{{ base_path }}{{ post.url }}</id>
      <summary type="html">{{ post.content | xml_escape }}</summary>
    </entry>
  {% endfor %}
</feed>